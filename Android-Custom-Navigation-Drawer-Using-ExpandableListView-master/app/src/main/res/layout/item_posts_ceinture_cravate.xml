<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<ImageView
    android:layout_marginTop="95dp"
    android:layout_centerHorizontal="true"
    android:id="@+id/ceinture1"
    android:layout_width="360dp"
    android:layout_height="360dp"
    android:src="@drawable/img1"/>
    <TextView
        android:id="@+id/nom_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ceinture Cuir Marron Chocolat"
        android:layout_below="@id/ceinture1"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"/>
    <TextView
        android:id="@+id/nouv_prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28.000 Dt"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/ceinture1"
        android:layout_marginLeft="255dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/anci_prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35.000 Dt"
        android:textSize="13dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/ceinture1"/>
    <TextView
        android:id="@+id/ligne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-------"
        android:textSize="13dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/ceinture1"/>

    <Button
        android:id="@+id/btn_ajouter"
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:text="Ajouter"
        android:textAllCaps="false"
        android:background="@color/black"
        android:layout_marginTop="25dp"
        android:layout_below="@id/nom_article"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="17dp"/>
</RelativeLayout>
