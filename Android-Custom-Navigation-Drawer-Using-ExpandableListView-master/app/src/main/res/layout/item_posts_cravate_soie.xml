<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:scaleType="fitXY"
        android:id="@+id/imagevieww"
        android:src="@drawable/cravate"
        android:layout_marginTop="95dp"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="250"
        android:textSize="1sp"
        android:textStyle="bold"

        android:gravity="center_horizontal"

        android:textColor="#00ffffff"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/imagevieww"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/tv_id"
        android:layout_alignTop="@+id/view"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="#000000"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@+id/tv_id"
        android:layout_marginTop="25dp"
        android:layout_below="@id/imagevieww"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"

        android:layout_toEndOf="@+id/tv_name"
        android:layout_alignTop="@+id/view"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="#ff0000"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_marginTop="25dp"
        android:layout_below="@id/imagevieww"/>


    <Button
        android:id="@+id/btn_essayer"
        android:layout_width="155dp"
        android:layout_height="45dp"
        android:text="Essayer photo"
        android:textAllCaps="false"
        android:background="@color/black"

        android:layout_marginLeft="220dp"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
        android:paddingLeft="6dp"

        android:layout_marginTop="560dp"
        android:layout_below="@id/nom_article"
        />
    <Button
        android:id="@+id/btn_ajouter"
        android:layout_width="155dp"
        android:layout_height="45dp"
        android:text="Ajouter"
        android:textAllCaps="false"
        android:background="@drawable/bottonstyle"
        android:layout_marginTop="560dp"
        android:layout_below="@id/nom_article"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textSize="17dp"

        android:paddingLeft="6dp"

        />


</RelativeLayout>
