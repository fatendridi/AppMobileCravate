<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<TextView
    android:layout_marginTop="5dp"
    android:id="@+id/titleMini"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="La couleur :"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:layout_marginLeft="10dp"
    android:textSize="15dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/phrase"
        android:layout_below="@+id/titleMini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vous débutez dans l’art du port de la cravate ? L’ uni est une valeur sûre et restera toujours une bonne idée. Optez pour une cravate à ton clair lorsque vous choisissez de porter des vêtements de tonalités sombres, et vice versa."
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:layout_marginTop="145dp"
        android:id="@+id/img"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"/>

</RelativeLayout>
